# Environment Variables for Avalanche Pong Game
# Copy this file to .env and fill in the actual values
# NEVER commit your .env file to git - it contains sensitive information

# Server-side private key for signing blockchain transactions
# This is the private key from your MetaMask wallet (starts with 0x)
# ⚠️ KEEP THIS SECRET - Never share or commit this value
SERVER_PRIVATE_KEY=your_private_key_here

# Contract address on Avalanche Fuji Testnet
# This is the deployed GameScore contract address
NEXT_PUBLIC_CONTRACT_ADDRESS=0x6e13FDaeB2D796aA53d024DB4e44E70a2F5B7f9A

# Avalanche Fuji Testnet RPC URL
# Optional - defaults to https://api.avax-test.network/ext/bc/C/rpc if not set
NEXT_PUBLIC_FUJI_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc

# API URL for the deployed application
# For local development: leave empty or set to http://localhost:3000
# For Vercel deployment: This will be automatically set by Vercel to your deployment URL
# You can also manually set it to your Vercel deployment URL (e.g., https://pong.florencecousergue.com)
NEXT_PUBLIC_API_URL=

# Optional: Snowtrace API Key for contract verification
# Not required for deployment, only needed if verifying contracts on Avalanche Explorer
SNOWTRACE_API_KEY=

# Hardhat deployment private key (for local development/testing)
# Usually the same as SERVER_PRIVATE_KEY
PRIVATE_KEY=your_private_key_here
